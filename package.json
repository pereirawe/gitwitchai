{
  "name": "witchai",
  "displayName": "WitchAI",
  "description": "AI for git commit and pull requests message suggestions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "witchai.helloWorld",
        "title": "WitchAi: Hello World"
      },
      {
        "command": "witchai.setOpenAIToken",
        "title": "WitchAi: Set OpenAI Token"
      },
      {
        "command": "witchai.commitWithAI",
        "title": "WitchAi: Commit with AI Summary"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WitchAI Configuration",
      "properties": {
        "openai.token": {
          "type": "string",
          "default": "",
          "description": "The OpenAI API token used for generating commit messages."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "simple-git": "^3.0.1",
    "supports-color": "^9.4.0"
  }
}
